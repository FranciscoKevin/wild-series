{% extends 'base.html.twig' %}

{% block title %} Série #{{ program.id }} {% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{ program.poster }}" alt="{{ program.title }} poster">
        <div>
            <div class="media-body">
                <h1 class="mt-0">{{ program.title }}</h1>
                <p>{{ program.summary }}</p>
                <p> Catégorie: {{ program.category.name }} </p>
            </div>
            <div class="media-body">
                {% for season in program.seasons %}
                    <p class="mt-0"> <a href="{{ path('program_season_show', {programId: program.id, seasonId: season.id}) }}">Saison {{ season.number }}</a></p>
                {% endfor %}
            </div>
        </div>
    </div>
<a href="{{ path('program_index') }}"> Retour à la liste des programmes</a>

{% endblock %}